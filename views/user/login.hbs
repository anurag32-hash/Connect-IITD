<form method="POST" action="" autocomplete="off" class="col-md-6 offset-md-3">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" class="form-control" type="text" name="username" value={{body.username}}>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" class="form-control" type="password" name="password" value={{body.password}}>
    </div>
    <div class="form-group">
        <div class="text-danger">
            {{info.info}}
        </div>
        <button class="btn btn-primary btn-lrg form-control">Sign In</button>
    </div>
    <div class="form-row">
        <div class="md-col-6">
            <a class='btn btn-info form-control' href="/user">Sign Up</a>
        </div>
        <div class="md-col-6 pull-right">
            <a class="btn btn-info form-control" href="#">Forgot Password?</a>
        </div>
    </div>
</form>