<h3><a href="/user" class="btn btn-secondary"><i class="fa fa-plus"></i> Create New</a> Users List</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.userName}}</td>
            <td>{{this.email}}</td>
            <td>
                <a href="/user/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/user/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<hr/>
<a href="/user/login" class="btn btn-secondary">Cancel</a>